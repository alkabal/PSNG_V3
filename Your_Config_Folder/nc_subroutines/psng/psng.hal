#******************************************
# MANUAL TOOLCHANGE with remap m6 probe using stdglue as standalone
#******************************************
net manual-tool-change-loop    iocontrol.0.tool-change      => iocontrol.0.tool-changed
net manual-tool-prep-loop      iocontrol.0.tool-prepare     => iocontrol.0.tool-prepared
net manual-tool-number         iocontrol.0.tool-number
net manual-tool-diameter                                    <= halui.tool.diameter
#******************************************


#******************************************
# Z BED COMPENSATION component you need sudo apt-get install python-scipy
#******************************************
loadusr -Wn probe.compensation python ./nc_subroutines/psng/python/compensation.py

net xpos-cmd 		          <= axis.x.pos-cmd			            => probe.compensation.x-pos
net ypos-cmd 		          <= axis.y.pos-cmd			            => probe.compensation.y-pos
net zpos-cmd 	            <= axis.z.pos-cmd		              => probe.compensation.z-pos
net eoffset-enable	      <= probe.compensation.enable-out	=> axis.z.eoffset-enable
net eoffset-scale	        <= probe.compensation.scale		    => axis.z.eoffset-scale
net eoffset-counts	      <= probe.compensation.counts 		  => axis.z.eoffset-counts
net eoffset-clear	        <= probe.compensation.clear 		  => axis.z.eoffset-clear

net compensation-bed-on	  <= probe.chk_use_bed_compensation  => probe.compensation.enable-in

